#:import Spinner __init__
#:import window kivy.core.window.Window

<Spinner>:
  id: spinner
  elevation: 0
  md_bg_color: (0,0,0,0)
  MDBoxLayout:
    orientation: "vertical"
    AnchorLayout:
      MDSpinner:
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {"center_x": .5, "center_y": .5}
        active: root.spinning
