#:import ContentNavigationDrawer __init__
#:import Tab __init__

<ContentNavigationDrawer>:
  orientation: "vertical"
  padding: "8dp"
  spacing: "8dp"

  # image
  AnchorLayout:
    anchor_x: "left"
    size_hint_y: None
    height: avatar.height
    Image:
      id: avatar
      size_hint: 1, None
      height: "56dp"
      source: "assets/images/eAmenu_splash_screen.png"

  # contacts
  MDLabel:
    text: "eAsistent Menu"
    font_style: "Button"
    size_hint_y: None
    height: self.texture_size[1]
  MDLabel:
    text: "dasadweb_help@gmail.com"
    font_style: "Caption"
    size_hint_y: None
    height: self.texture_size[1]

  # nav items
  MDBoxLayout:
    MDList:
      id: tabs
      pos_hint: {"center_x": .5, "center_y": .5}

  AnchorLayout:
    size_hint_y: .1
    adaptive_height: True
    pos_hint: {"Bottom": 1}
    MDIconButton:
      size_hint_y: None
      height: dp(56)
      icon: "account-outline"
      on_press: app.root.ids.manager.current = "login"

<Tab>:
  theme_text_color: "Custom"
  on_press: app.root.ids.manager.current = root.screen
  on_release: root.set_color_item(self); app.root.ids.nav_drawer.set_state("close")
  IconLeftWidget:
    id: icon
    icon: root.icon
    theme_text_color: "Custom"
    text_color: root.text_color
    _no_ripple_effect: True
